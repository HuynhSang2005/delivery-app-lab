{
  "compilerOptions": {
    "target": "ES2023",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolvePackageJsonExports": true,
    "isolatedModules": true,
    "declaration": true,
    "incremental": true
  },
  "references": [
    { "path": "./apps/api" }
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    ".next",
    ".expo"
  ]
}
